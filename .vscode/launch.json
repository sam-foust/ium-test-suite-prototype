{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend + Frontend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "start-frontend",
      "program": "${workspaceFolder}/TestSuiteApi/bin/Debug/net10.0/TestSuiteApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/TestSuiteApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}


